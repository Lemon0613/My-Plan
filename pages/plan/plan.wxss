/* pages/plan/plan.wxss */
.plan-container {
  width: 100%;
  min-height: 100%;
  background: #f9f9f9;
}
.swiper {
  width: 100%;
  height: 500rpx;
}
.item-image image {
  width: 100%;
  height: 100%;
}

.plan-container {
  width: 100%;
}
.cate-tit {
  width: 100%;
  display: block;
  height: 126rpx;
  line-height: 126rpx;
  font-size: 36rpx;
  color: #07c186;
  font-weight: 700;
  text-align: center;
}
.category-con {
  width: 100%;
  padding-bottom: 30rpx;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.category-item {
  width: 310rpx;
  height: 246rpx;
  background: #fff;
  box-shadow: 5rpx 8rpx 16rpx #eee;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  margin-right: 40rpx; 
}
.category-item:nth-child(even) {
  margin-right: 0;
}
.cate-image {
  width: 310rpx;
  height: 184rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.cate-image image {
  width: 100%;
  height: 100%;
}
.cate-name {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #969696;
  font-weight: 700; 
}
.bottom-tips {
  width: 86%;
  margin: 0 auto;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  border-top: solid 1px #eaeaea; 
}